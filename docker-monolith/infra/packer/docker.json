{
    "variables": {
            "project_id":"",
            "source_image_family":"",
            "machine_type":"",
            "zone":"",
            "source_image":""
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{ user `project_id` }}",
            "image_name": "docker-app-{{timestamp}}",
            "image_family": "docker-app",
            "source_image_family": "{{ user `source_image_family` }}",
	        "source_image":"{{ user `source_image` }}",
	        "image_description": "Ubuntu 16.04 LTS Machine Image",
	        "disk_size": 10,
	        "disk_type": "pd-standard",
	        "network":"default",
	        "tags":"docker-app-server",
	        "zone": "{{ user `zone` }}",
	        "ssh_username": "appuser",
            "machine_type": "{{ user `machine_type` }}"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "{{ pwd }}/ansible/playbooks/docker_install.yml",
            "ansible_env_vars": ["ANSIBLE_ROLES_PATH={{ pwd }}/ansible/roles/","ANSIBLE_SSH_ARGS='-o IdentitiesOnly=yes'"]
        }
    ]
}
